<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.easymap.android.maps.v3.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="52dp"
        />
    <!--主界面顶部搜索-->
    <include layout="@layout/main_top_view"/>


    <!--GPS 定位按钮 控件-->
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="62dp"
        android:src="@mipmap/navi_idle_gps_unlocked"
        android:background="@color/white"
        android:elevation="1dip"
        />

    <!--图层切换开关 控件-->
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="75dp"
        android:background="@color/white"
        android:src="@mipmap/map_layer_change"
        android:elevation="1dip"
        />

    <!--放大缩小 控件-->
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="57dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:src="@mipmap/zoomin_idle_tool"
                android:scaleType="centerInside"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/zoomout_idle_tool"
                android:scaleType="centerInside"
                />
        </RelativeLayout>




    <!--底部控件-->
    <include layout="@layout/main_bottom_view"/>

</RelativeLayout>
